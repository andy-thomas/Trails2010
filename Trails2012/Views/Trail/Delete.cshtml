@model Trails2012.Domain.Trail

@{
    ViewBag.Title = "Delete";
}

<h2>Delete</h2>

<h3>Are you sure you want to delete this?</h3>
<fieldset>
    <legend>Trail</legend>

    <div class="display-label">Name</div>
    <div class="display-field">@Model.Name</div>

    <div class="display-label">Location</div>
    <div class="display-field">@(Model.Location == null ? "None" : Model.Location.Name)</div>

    <div class="display-label">TrailType</div>
    <div class="display-field">@Html.DisplayTextFor(_ => Model.TrailType).ToString()</div>

    <div class="display-label">Description</div>
    <div class="display-field">@Model.Description</div>

    <div class="display-label">Distance</div>
    <div class="display-field">@String.Format("{0:F}", Model.Distance)</div>

    <div class="display-label">ElevationGain</div>
    <div class="display-field">@String.Format("{0:F}", Model.ElevationGain)</div>

    <div class="display-label">Cost</div>
    <div class="display-field">@String.Format("{0:F}", Model.Cost)</div>

    <div class="display-label">EstimatedTime</div>
    <div class="display-field">@String.Format("{0:F}", Model.EstimatedTime)</div>

    <div class="display-label">IsLoop</div>
    <div class="display-field">@Model.IsLoop</div>

    <div class="display-label">Difficulty</div>
    <div class="display-field">@Html.DisplayTextFor(_ => Model.Difficulty).ToString()</div>

    <div class="display-label">ReturnOnCost</div>
    <div class="display-field">@String.Format("{0:F}", Model.ReturnOnCost)</div>

    <div class="display-label">ReturnOnEffort</div>
    <div class="display-field">@String.Format("{0:F}", Model.ReturnOnEffort)</div>

    <div class="display-label">OverallGrade</div>
    <div class="display-field">@String.Format("{0:F}", Model.OverallGrade)</div>

    <div class="display-label">Notes</div>
    <div class="display-field">@Model.Notes</div>
</fieldset>
@using (Html.BeginForm()) {
    <p>
        <input type="submit" value="Delete" /> |
        @Html.ActionLink("Back to List", "Index")
    </p>
}


