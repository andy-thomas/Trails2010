 @using Telerik.Web.Mvc.UI

 @model IEnumerable<Trails2012.Domain.Region>

 
<h2>Regions</h2>

@(Html.Telerik().Grid(Model)
    .Name("RegionGrid")
    .ToolBar(commands => commands.Insert())
    .DataKeys(keys => keys.Add(region => region.Id))
    .DataBinding(dataBinding => dataBinding.Ajax()
                                    .Select("SelectAjaxEditing", "Region")
                                    .Insert("CreateAjaxEditing", "Region")
                                    .Update("EditAjaxEditing", "Region")
                                    .Delete("DeleteAjaxEditing", "Region"))
    .Editable(editing => editing.Mode(GridEditMode.InLine))
    .Sortable()
    .Filterable()
    .Columns(columns =>
                    {
                        columns.Bound(region => region.Name).Width(100);
                        columns.Bound(region => region.Description).Width(200).Sortable(false);
                        columns.Command(commands =>
                                            {
                                                commands.Edit();
                                                commands.Delete();
                                            }).Width(200).Title("Commands");
                    }))

@Html.Telerik().ScriptRegistrar()
